@using MvcUunStokProjesi.Models.Entity
@model List<tblmusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
<p>
    <b>  Aranacak Müşteri Adı:</b>   @Html.TextBox("p")
    <input type="submit" value="Ara" />
</p>
            }

<table class="table table-bordered" >

    <tr>
        <th> MÜŞTERİ ID </th>
        <th> MÜŞTERİ ADI </th>
        <th> MÜŞTERİ SOYADI </th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert </th>
    </tr>
    <tbody>
        @foreach(var mus in Model)
            {
        <tr>
            <th>@mus.musteriid</th>
            <td>@mus.musteriad</td>
            <td>@mus.musterisoyad</td>

            <td> <a href="/musteri/sil/@mus.musteriid " class="btn btn-danger">SİL </a></td>
            <td> <a href="/musteri/musterigetir/@mus.musteriid" class="btn btn-success">GÜNCELLE </a></td>
            <td>@Html.ActionLink("Sil Butonu", "sil", new { id = mus.musteriid }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz')" })</td>
            <!--return confirm : evet hayır lı uyarı günderir -->
        </tr>
            }
    </tbody>
</table>
<a href="/musteri/yenimusteri/" class="btn btn-primary"> YENİ MÜŞTERİ EKLE</a>

