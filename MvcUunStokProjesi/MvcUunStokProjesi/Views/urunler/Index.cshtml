@using MvcUunStokProjesi.Models.Entity;
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<tblurunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th> Ürün Id </th>
            <th> Ürün Adı </th>
            <th>Markası</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.urunid</th>
                <td>@urn.urunad</td>
                <td>@urn.marka</td>
                <td>@urn.tblkotegoriler.kategoriad</td>
                <td>@urn.fiyat</td>
                <td>@urn.stok</td>
                <td> <a href="/urunler/sil/@urn.urunid " class="btn btn-danger">SİL </a></td>
                <td> <a href="/urunler/urungetir/@urn.urunid" class="btn btn-success">GÜNCELLE </a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/urunler/urunekle/" class="btn btn-primary"> YENİ ÜRÜN EKLE</a> <!--bu view den adrese bak karıştırırsan -->
